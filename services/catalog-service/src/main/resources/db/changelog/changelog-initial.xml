<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="catalog-schema-v1" author="system">
        <sql>CREATE SCHEMA IF NOT EXISTS catalog;</sql>
    </changeSet>

    <!-- Initial schema derived from JPA entities in com.pkswoodhouse.pencommerce.catalog.entities -->
    <changeSet id="catalog-v1" author="system">
        <!-- materials table -->
        <createTable tableName="materials">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="material_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="image_uri" type="VARCHAR(255)"/>
            <column name="price" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="material_unit_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="quantity_on_hand" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- products table -->
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="product_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DOUBLE PRECISION"/>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image_uri" type="VARCHAR(255)"/>
        </createTable>

        <!-- product_materials table (join entity) -->
        <createTable tableName="product_materials">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="material_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity_used" type="INTEGER"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="product_materials" baseColumnNames="product_id"
                                 referencedTableName="products" referencedColumnNames="id"
                                 constraintName="fk_product_materials_product"/>
        <addForeignKeyConstraint baseTableName="product_materials" baseColumnNames="material_id"
                                 referencedTableName="materials" referencedColumnNames="id"
                                 constraintName="fk_product_materials_material"/>

        <createIndex tableName="materials" indexName="idx_materials_name">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="products" indexName="idx_products_name">
            <column name="name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
